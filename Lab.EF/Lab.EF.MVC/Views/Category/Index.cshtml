@model List<Lab.EF.MVC.Models.CategoryView>

@{
    ViewBag.Title = "Categories";
}

<h2 class="text-center">Categories</h2>

<div>
    @Html.ActionLink("Create", "Create", "Category", new { @class = "btn btn-success"})
</div>

<hr />

<table class="table table-hover ">
    <thead>
        <tr class="active">
            <th>
                 Category ID
            </th>
            <th>
                 Category Name
            </th>
            <th>
                 Description
            </th>
            <th>
                 Picture
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => category.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => category.CategoryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => category.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => category.Picture)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Customer", new { id = category.CategoryID },
                                new { @class = "btn btn-danger" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Customer", new { id = category.CategoryID },
                                new { @class = "btn btn-primary" })
            </td>

        </tr>
        }
    </tbody>
</table>

