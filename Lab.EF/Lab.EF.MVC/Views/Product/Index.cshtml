@model List<Lab.EF.MVC.Models.ProductView>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<hr />

<table class="table table-hover">
    <thead>
        <tr class="info">
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Supplier ID
            </th>
            <th>
                Category ID
            </th>
            <th>
                Quantity Per Unit
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Units In Stock
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => product.SupplierID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.CategoryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.QuantityPerUnit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.UnitsInStock)
                </td>
              
            </tr>
        }
    </tbody>
</table>

