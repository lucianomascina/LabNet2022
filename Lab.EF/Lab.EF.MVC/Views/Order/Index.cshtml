@model List<Lab.EF.MVC.Models.OrderView>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<hr />

<table class="table table-hover">
    <thead>
        <tr class="info">
            <th>
                Order ID
            </th>
            <th>
                Customer ID
            </th>
            <th>
                Employee ID
            </th>
            <th>
                Order Date
            </th>
            <th>
                Required Date
            </th>
            <th>
                Shipped Date
            </th>
            <th>
                Ship Via
            </th>
            <th>
                Freight
            </th>
            <th>
                Ship Name
            </th>
            <th>
                Ship City
            </th>
            <th>
                Ship Country
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => order.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.CustomerID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => order.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.ShipVia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.Freight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.ShipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.ShipCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.ShipCountry)
            </td>
        </tr>
        }
    </tbody>
</table>

