@model List<Lab.EF.MVC.Models.EmployeeView>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<hr />

<table class="table table-hover">
    <thead>
        <tr class="info">
            <th>
                Employee ID
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Title
            </th>
            <th>
                Birth Date
            </th>
            <th>
                Hire Date
            </th>
            <th>
                City
            </th>
            <th>
                Region
            </th>
            <th>
                Home Phone
            </th>
            <th>
                Reports To
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => employee.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.HomePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => employee.ReportsTo)
            </td>
        </tr>
        }
    </tbody>
</table>
