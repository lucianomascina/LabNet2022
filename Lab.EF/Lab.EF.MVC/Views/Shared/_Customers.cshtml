@model Lab.EF.MVC.Models.CustomerView

<div class="container">    
    <div class="form-group">
        @Html.LabelFor(c => c.CustomerID, new {@class = "control-label" })
        @Html.TextBoxFor(c => c.CustomerID, new { @class = "form-control", maxlength = "5" })
        @Html.ValidationMessageFor(c => c.CustomerID, "", new { @class = "text-danger " })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CompanyName, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.CompanyName, new { @class = "form-control", maxlength = "40" })
        @Html.ValidationMessageFor(c => c.CompanyName, "", new { @class = "text-danger " })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ContactName, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.ContactName, new { @class = "form-control", maxlength = "30" })
        @Html.ValidationMessageFor(c => c.ContactName)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ContactTitle, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.ContactTitle, new { @class = "form-control", maxlength = "30" })
        @Html.ValidationMessageFor(c => c.ContactTitle)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Address, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Address, new { @class = "form-control", maxlength = "60" })
        @Html.ValidationMessageFor(c => c.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.City, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.City, new { @class = "form-control", maxlength = "15" })
        @Html.ValidationMessageFor(c => c.City)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Region, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Region, new { @class = "form-control", maxlength = "15" })
        @Html.ValidationMessageFor(c => c.Region)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Country, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Country, new { @class = "form-control", maxlength = "15" })
        @Html.ValidationMessageFor(c => c.Country)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Phone, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", maxlength = "24" })
        @Html.ValidationMessageFor(c => c.Phone)
    </div>
    <div class="row">
        <div class="col-md-2">
            <input type="submit" class="btn btn-lg btn-success" value="Save">
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Back", "Index", "Customer", new { @class = "btn btn-lg btn-danger" })
        </div>
    </div>
   
</div>