@model Lab.EF.MVC.Models.ProductView

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            @Html.LabelFor(p => p.ProductName, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control input-lg", maxlength = "40" })
            @Html.ValidationMessageFor(p => p.ProductName, "", new { @class = "text-danger " })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.SupplierID, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.SupplierID, new { @class = "form-control input-lg" })
            @Html.ValidationMessageFor(p => p.SupplierID, "", new { @class = "text-danger " })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.CategoryID, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.CategoryID, new { @class = "form-control input-lg" })
            @Html.ValidationMessageFor(p => p.CategoryID, "", new { @class = "text-danger " })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.QuantityPerUnit, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.QuantityPerUnit, new { @class = "form-control input-lg", maxlength = "20" })
            @Html.ValidationMessageFor(p => p.QuantityPerUnit, "", new { @class = "text-danger " })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.UnitPrice, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.UnitPrice, new { @class = "form-control input-lg" })
            @Html.ValidationMessageFor(p => p.UnitPrice, "", new { @class = "text-danger " })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.UnitsInStock, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.UnitsInStock, new { @class = "form-control input-lg" })
            @Html.ValidationMessageFor(p => p.UnitsInStock, "", new { @class = "text-danger " })
        </div>
        <div class="form-group">
            @Html.ActionLink("Back", "Index", "Product", new { @class = "btn btn-lg btn-danger col-md-offset-2" })
            <input type="submit" class="btn btn-lg btn-success col-md-offset-2" value="Save" onclick="return confirm('seguro desea guardar?');">

        </div>
    </div>
</div>
